<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drugs_drawer"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="lolbellum.druglog.drugs">

    <FrameLayout android:id="@+id/drugs_container" android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drugsList"
        android:dividerHeight="10dp"
        android:longClickable="false" />

<fragment android:id="@+id/navigation_drawers"
android:layout_width="@dimen/navigation_drawer_width" android:layout_height="match_parent"
android:layout_gravity="start" android:name="lolbellum.druglog.DrugsNavigationBar"
tools:layout="@layout/fragment_navigation_drawer" />

    </android.support.v4.widget.DrawerLayout>
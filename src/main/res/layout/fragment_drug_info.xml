<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="lolbellum.druglog.DrugInfoFragment">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/drug_view_image"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/ic_drugdefault"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Drug Name"
        android:id="@+id/drug_view_drug_name"
        android:layout_below="@+id/drug_view_image"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nicknames: "
        android:id="@+id/drug_view_nick_names"
        android:layout_below="@+id/drug_view_drug_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_erowid"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_140px_erowid_center_logo"
        android:onClick="clickErowid"
        android:layout_marginBottom="25dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_wikipedia"
        android:src="@drawable/ic_wikipedia"
        android:layout_alignTop="@+id/image_erowid"
        android:layout_centerHorizontal="true"
        android:onClick="clickWiki"
        android:focusableInTouchMode="false" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_reddit"
        android:src="@drawable/ic_reddit"
        android:layout_alignTop="@+id/image_wikipedia"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:onClick="clickReddit" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Drug Information Resources: "
        android:id="@+id/textView28"
        android:layout_above="@+id/image_erowid"
        android:layout_alignLeft="@+id/image_erowid"
        android:layout_alignStart="@+id/image_erowid"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal" />

</RelativeLayout>
